{
  "kind": "collectionType",
  "collectionName": "features",
  "info": {
    "singularName": "feature",
    "pluralName": "features",
    "displayName": "Features"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "shortTitle": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "features": {
      "type": "component",
      "repeatable": true,
      "component": "feature.features"
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "label": {
      "type": "string"
    },
    "order": {
      "type": "integer"
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo"
    },
    "topSection": {
      "type": "component",
      "component": "sections.top-section",
      "repeatable": false,
      "required": true
    },
    "sections": {
      "type": "dynamiczone",
      "components": [
        "sections.cta-section",
        "sections.faq-section",
        "sections.items-section",
        "sections.reviews-section",
        "sections.spotlight-section",
        "sections.templates-section",
        "sections.tour-section",
        "sections.compare-section",
        "sections.compare-info-section",
        "sections.testimonial-section",
        "sections.top-section",
        "sections.product-list-section",
        "sections.benefits",
        "sections.story-section",
        "sections.stars-reviews-section",
        "sections.story-tabs",
        "homepage.homepage-feature-tabs",
        "sections.table-section"
      ]
    }
  }
}
